<section>
  <div class="content-column">
   <form action="//hut4app.us2.list-manage.com/subscribe/post-json?u=4d5f2d95ff2698d62e8e34026&id=a9d9de8ed8&c=?" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
      <ul>
        <li>
        <label for="mce-EMAIL">Email Address (required) </label>
        <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="your email address">
        </li>
        <li>
        <label for="mce-FNAME">First Name </label>
        <input type="text" value="" name="FNAME" class="" id="mce-FNAME" placeholder="Your First Name">
        </li>
        <li>
        <label for="mce-LNAME">Last Name </label>
        <input type="text" value="" name="LNAME" class="" id="mce-LNAME" placeholder="Your Last Name">
        </li>
        <li>
        <div class="response" id="mce-error-response" style="display:none"></div>
        <div class="response" id="mce-success-response" style="display:none"></div>
        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;"><input type="text" name="b_4d5f2d95ff2698d62e8e34026_a9d9de8ed8" tabindex="-1" value=""></div>
        </li>
        <li>
        <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
        </li>
      </ul>
    </form>
  </div>
  <div class="sidebar-column">
    <div class="message notice">
      <p>We hate spam as much as you do, so we'll never give or sell your email to anyone else.</p>
    </div>
  </div>
</section>

<script type="text/javascript">
$(function () {
  var $form = $('#mc-embedded-subscribe-form');

  $('#mc-embedded-subscribe').on('click', function(event) {
    if(event) event.preventDefault();
    register($form);
  });
});

function register($form) {
  $('.response').css({'display' : 'none'});
  $.ajax({
    type: $form.attr('method'),
    url: $form.attr('action'),
    data: $form.serialize(),
    cache       : false,
    dataType    : 'json',
    contentType: "application/json; charset=utf-8",
    error       : function(err) { $('#mce-error-response').toggle().html('<p>Could not connect to server. Please try again later.</p>'); },
    success     : function(data) {
     
      if (data.result != "success") {
        var message = data.msg.substring(4);
        $('#mce-error-response').toggle().html('<p>'+message+'</p>');
      } 

      else {
        var message = data.msg;
        $('#mce-success-response').toggle().html('<p>'+message+'</p>');
      }
    }
  });
}
</script>
