<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Cultivate" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag  "all" %>
  </head>
  <body class="<%= page_classes %>">
  <header>
    <div id="site-header">
      <div class="wrapper">
        <div id="logo">Cultivate</div>
        <nav>
          <ul>
            <li><%= link_to 'Our History', '/#our-history' %></li>
            <li><%= link_to 'What we do', '/#what-we-do' %></li>
            <li><%= link_to 'Contact', '/#contact' %></li>
            <li><%= link_to 'Blog', '/posts/' %></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>
  <section id="message">
    <div class="wrapper">
      <h1>We build digital products that deliver business success.</h1>
      <h2>We believe trust, collaboration and frequent market testing are the best way to deliver successful products.</h2>
    </div>
  </section>
  <div id="site-content-area">
    <div class="wrapper">
      <%= yield %>
    </div>
  </div>
  </body>
</html>
