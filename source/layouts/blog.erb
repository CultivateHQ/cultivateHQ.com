<!doctype html>
<html lang="en">
  <head>
    <%= partial "partials/head" %>
    <%= stylesheet_link_tag "code_highlight" %>
  </head>
  <body class="<%= page_classes %>">
    <%= partial "partials/header" %>
    <section id="site-content-area">
      <%= partial "partials/breadcrumbs" %>
      <header class="site-content-area-header padding-medium">
        <div class="mid-width">
          <h1><%= current_page.data.title %></h1>
          <% if current_page.data.has_key?('subtitle') %>
            <h2 class="subtitle"><%= current_page.data.subtitle %></h2>
          <% end %>
        </div>
      </header>

      <div class="layout-two-column max-width">
        <div class="layout-two-column__left">
          <article class="page-content min-width padding-large page-content--blog-post">
            <%= yield %>
          </article>
          <aside class="widget">
            <%= partial 'partials/blog_pagination',
              locals: {
              prev_page: prev_page,
              next_page: next_page,
              num_pages: num_pages,
              page_number: page_number } %>
          </aside>
        </div>
        <div class="layout-two-column__right padding">
          <aside class="widget">
            <h3>Posts by tag</h3>
            <%= partial "partials/tags" %>
          </aside>
          <aside class="widget">
            <h3>Posts by year</h3>
          <% [2018, 2017, 2016, 2015, 2014, 2013, 2012].each do |year| %>
              <p>
                <%= link_to year, blog_year_path(year) %>
              </p>
          <% end %>
          </aside>
        </div>
    </section>
    <%= partial "partials/footer" %>
  </body>
</html>
